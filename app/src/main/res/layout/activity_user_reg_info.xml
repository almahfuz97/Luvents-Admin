<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradien_color2"

    tools:context=".activities.UserRegInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <LinearLayout
                android:layout_marginTop="50dp"
                android:id="@+id/lin"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="5dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Info"
                            android:textSize="25dp"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="#5037D6"
                            android:layout_marginBottom="40dp"
                            />


                        <TextView
                            android:id="@+id/userInfoNameTvId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_account_circle_black_24dp"
                            android:drawablePadding="5dp"
                            android:inputType="textEmailAddress"
                            android:padding="10dp"


                            />

                        <TextView
                            android:id="@+id/userInfoEmailTvId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_email_blue_24dp"
                            android:drawablePadding="5dp"
                            android:inputType="textEmailAddress"
                            android:padding="10dp"


                            />
                        <TextView
                            android:id="@+id/userInfoUniversityTvId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_school_blue_24dp"
                            android:drawablePadding="5dp"
                            android:inputType="textEmailAddress"
                            android:padding="10dp"


                            />

                        <TextView
                            android:id="@+id/userInfoContactTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_phone_black_24dp"
                            android:drawablePadding="5dp"
                            android:inputType="phone"
                            android:padding="10dp"


                            />
                        <TextView
                            android:id="@+id/userInfoBkashTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/transaction_icon2"
                            android:inputType="textPersonName"
                            android:drawablePadding="5dp"
                            android:padding="10dp"
                            android:layout_marginBottom="15dp"


                            />



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change Status "
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
                            android:padding="18dp"
                            android:gravity="center"

                            />

                            <Spinner
                                android:id="@+id/userInfoSpinnerId"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:entries="@array/statusChange"
                                android:dropDownSelector="@color/blue_grey_active"
                                android:padding="10dp"

                                >

                            </Spinner>

                        </LinearLayout>

                        <Button
                            android:id="@+id/userInfoSaveId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Save "
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginTop="20dp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:background="@drawable/bg_circle_shape"
                            android:padding="18dp"
                            android:layout_marginBottom="10dp"

                            />





                    </LinearLayout>




                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>



</RelativeLayout>